networks:
  localdev:
    external: true
    name: localdev
services:
  grafana:
    container_name: grafana
    image: grafana/grafana:latest
    ports:
    - published: 3000
      target: 3000
    restart: unless-stopped
    volumes:
    - grafana-data:/var/lib/grafana:rw
  prometheus:
    build:
      context: F:\Facultate\Licenta\E-LearningRecSys\E-LearningRecSysAPI
      dockerfile: Dockerfile-prometheus
    command:
    - --config.file=/etc/prometheus/prometheus.yml
    container_name: prometheus
    ports:
    - published: 9090
      target: 9090
    restart: unless-stopped
  recsysapi.presentation:
    build:
      context: F:\Facultate\Licenta\E-LearningRecSys\E-LearningRecSysAPI
      dockerfile: RecSysApi/Dockerfile
    depends_on:
      recsysdb:
        condition: service_started
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_URLS: https://+:443;http://+:80
    image: recsysapipresentation
    ports:
    - target: 80
    - published: 5006
      target: 443
    - target: 443
    volumes:
    - C:\Users\Remus\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\Remus\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
  recsysdb:
    environment:
      ACCEPT_EULA: "Y"
      SA_PASSWORD: abcDEF123#
    image: mcr.microsoft.com/mssql/server
    ports:
    - published: 5010
      target: 1433
    volumes:
    - recsysdb-data:/app:rw
version: '3.4'
volumes:
  grafana-data:
    driver: local
  prometheus-data:
    driver: local
  recsysdb-data:
    driver: local